<%=form_for :user do |f|%>
  <div class="form-group">
    <label for="exampleInputEmail1"><%= t "name" %> </label>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1"><%= t "email" %></label>
    <%= f.text_field :email, class: "form-control" %>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1"><%= t "birthday" %></label>
    <%= f.text_field :birthday, class: "form-control" %>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1"><%= t "address" %> </label>
    <%= f.text_field :address, class: "form-control" %>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1" style="margin-right: 10px"><%= t "role" %></label>
  <%= f.select(:role, options_for_select(@roles.map{|role|  role}))%>  </div>
  <%= f.submit t("update"), class: "btn btn-primary" %>
<% end %>
