<table class="table">
  <thead class=" text-primary">
    <th>
      ID
    </th>
    <th>
      Image
    </th>
    <th>
      Name
    </th>
    <th>
      Price
    </th>
    <th>
      Status
    </th>
    <th>
      Descripton
    </th>
    <th>
      Action
    </th>
  </thead>
  <tbody>
    <% @rooms.each do |r| %>
      <tr>
        <td>
          <%= r.id %>
        </td>
        <td>
          <%= image_tag r.image, class: "image-list" %>
        </td>
        <td>
          <%= r.name %>
        </td>
        <td>
          <%= r.price %>
        </td>
        <td>
          <%= r.deleted %>
        </td>
        <td>
          <%= r.description %>
        </td>
        <td class="text-primary">
          <%= link_to "edit", admin_rooms_edit_path(id: r.id) , class: "btn btn-warning" %>
          <%= link_to "delete", admin_rooms_delete_path(id: r.id), class: "btn btn-danger" %>
       </td>
     </tr>
   <% end %>
 </tbody>
</table>
