<%=form_for :room do |f|%>
  <div class="form-group">
    <label for="exampleInputEmail1">Room Name: </label>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Room Image: </label>
    <%= f.text_field :image, class: "form-control" %>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Room Price: </label>
    <%= f.text_field :price, class: "form-control" %>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Room Description: </label>
    <%= f.text_field :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Room Type: </label>
   <%= f.collection_select :room_type_id, @room_type, :id, :name ,prompt: true, class: "form-control select-box"%>
  </div>
  <%= f.submit "Create new room", class: "btn btn-primary" %>
<% end %>
